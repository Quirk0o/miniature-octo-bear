doctype html
html(lang="en")
    head
        title= app.title
        include _stylesheets
        script(type="text/x-mathjax-config").
            MathJax.Hub.Config({
                tex2jax: {inlineMath: [['$', '$'], ['\\(', '\\)']]}
            });
        script(src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML")
    body(ng-app="NoteApp")

        main(ng-controller="MainCtrl")
            block content

        footer
            include _footer

        include _scripts